- @headers.each_with_index do |header_name, index|
  .col-importer{ id: [index + 1, header_name].join("_"), data: { id: index + 1 } }
    -# temporary placement of the ignore column checkbox

    -# I think this value should be the selected field name? or should it be the header_name initially and then updated?
    %label.c-input.c-checkbox.m-b-quarter{ data: { describe: "activate-ignore-column" } }
      %input{ :name => [index + 1, header_name].join("_"), :type => "checkbox", :value => header_name }
      %span.c-indicator
      %span.text-muted Ignore Column


    .card.col-importer-contents
      .card-header
        .form-group
          -# TODO: if automatically mapped, we need some kind of visual flourish to indicate "mapped for ya!", perhaps a flag is passed to a hidden field for each column and JS can read it?
          -# TODO: The select should be broken into option groups... like personal contact details, organization contact details, etc.

          = id.select(header_name, options_for_select(@all_valid_columns.map { |c| [c.humanize.titleize, c] }), { include_blank: true }, { class: "c-select" })
          = id.hidden_field index

        %h3.h5.text-xs-center{ data: { describe: 'source-column-header-name' } }
          = header_name

      .card-block.card-block-importer-index{ data: { column: index_alphabetize[index] } }
        = index_alphabetize[index]

      .list-group.list-group-flush
        - (0..(@first_x_rows.length - 1)).each do |i|
          .list-group-item
            =@first_x_rows[i][header_name]
